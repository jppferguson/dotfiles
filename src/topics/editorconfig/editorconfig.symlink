# See http://editorconfig.org

# This is the top-most .editorconfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Sublime seems to use tabs in its settings files,
# so lets just stick with that for consistency...
[**.sublime-settings]
indent_style = tab
indent_size = 2
