{
  "model": "sonnet",
  "permissions": {
    "additionalDirectories": ["~/.agentrc"],
    "defaultMode": "acceptEdits"
  },
  "statusLine": {
    "type": "command",
    "command": "bun x ccusage statusline"
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "sh ~/.claude/hooks/completed-task.sh"
          }
        ]
      }
    ]
  }
}
